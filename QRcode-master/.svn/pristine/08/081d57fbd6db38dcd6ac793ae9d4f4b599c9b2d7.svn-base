 -->
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<c:set var="req" value="${pageContext.request}" />
<c:set var="baseURL"
	value="${fn:replace(req.requestURL, fn:substring(req.requestURI, 0, fn:length(req.requestURI)), req.contextPath)}" />
<c:url var="myUrl" value="${baseURL}/${MyID}" />
<script type="text/javascript"
	src="${myUrl}resources/controller/superAdmin/designation/designation.js"></script>
<div class="right-part">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<%-- <script type="text/javascript"
	src="${myUrl}resources/js/angu/row_selection.js"></script> --%>
		<div class="top-space">
			<div class="title-form">
				<h2>
					Designation Details<small></small>
				</h2>
			</div>
		</div>
		<div ng-app="designation" id="cntrlID" ng-controller="designationCtrl">
			<div style="">
				<div class="row mrg-lg-btm-top">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

						<div class="alert-box success" id="success">Saved or updated
							successfully!</div>
						<div class="alert-box failure" id="deleted">Deleted
							Successfully!</div>
						<div class="alert-box failure" id="duplicate">Duplicate
							Entry!</div>
						<button id="btnDelete" ng-click="hide()"
							class="btn btn-primary pull-right">{{Show}}</button>
					</div>
				</div>

				<div id="design-form" class="contain-space1">

					<div class="form-field">
						<div class="row">

							<form id="demo-form2" name="form" ng-submit="submit()"
								class="form-horizontal form-label-left">

								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">


									<div class="form-group">
										<label class="control-label col-md-5 col-sm-5 col-xs-12"
											for="first-name">Designation <span class="required"
											style="color: red">*</span>
										</label>
										<div class="col-md-7 col-sm-7 col-xs-12">
											<input type="text" name="designation"
												ng-model="designationModel.designation" required
												pattern="^[^\s]+(\s.*)?$" id="designation"
												title="No space is allowed at the beginning" required
												maxlength="50" class="form-control col-md-7 col-xs-12">
											<span id="desc" style="color: green"></span>
										</div>
									</div>

								</div>


								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

									<div class="form-group">
										<label class="control-label col-md-5 col-sm-3 col-xs-12">Department
											<span class="required" style="color: red">*</span>
										</label>
										<div class="col-md-7 col-sm-9 col-xs-12">
											<select class="form-control" name="deptName"
												data-ng-model="designationModel.departmentModel.rowId"
												data-ng-options="key as value for (key, value) in deptList"
												id="rowId" value="key" required>
												<option value="">Please choose a department</option>
											</select>

										</div>
									</div>
								</div>


								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										<label class="control-label col-md-5 col-sm-5 col-xs-12"
											for="last-name"> Description <span class="required"></span>
										</label>
										<div class="col-md-7 col-sm-7 col-xs-12">
											<textarea type="text" ng-model="designationModel.description"
												id="description" name="description" maxlength="255"
												class="form-control col-md-7 col-xs-12"></textarea>
											<span id="desgdesc" style="color: green"></span>

										</div>
									</div>
									<button class="btn btn-primary pull-right"
										ng-click="submitted=true" type="submit">Save</button>
									<button class="btn btn-primary pull-right" ng-click="reset()"
										type="reset">Clear</button>

								</div>




							</form>
						</div>
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
							<p class="pull-right mandatory">
								<span class="required" style="color: red">*</span>represents
								mandatory
							</p>
						</div>
					</div>
				</div>

			</div>

			<div class="contain-space1">
				<div class="j-table-responsive">


					<div class="table-field">
						<table id="datatable-buttons" datatable="ng" border="0"
							class="display table table-striped table-bordered table-bordered-color dataTable no-footer"
							cellspacing="0" width="100%" class="">
							<thead>
								<tr>
									<th>Designation</th>
									<th>Department</th>
									<th>Description</th>
									<th style="text-align: center;">Edit</th>
									<th class="text-center"><i ng-click="remove()"
										class="fa fa-trash ico-action-red icon-deleteall"></i><input
										type="checkbox" ng-model="selectedAll" ng-click="checkAll()" /></th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Designation</th>
									<th>Department</th>
									<th>Description</th>
									<th></th>
									<th></th>
								</tr>
							</tfoot>
							<tbody>

								<tr ng-repeat="designationModel in designationModelList">
									<td>{{designationModel.designation}}</td>
									<td>{{designationModel.departmentModel.department}}</td>
									<td>{{designationModel.description}}</td>

									<td class="text-center"><a
										ng-click="edit(designationModel,$index)"><i
											class="btn fa fa-edit ico-action"></i></a> <!-- <a
									ng-click="deleteDept(designationModel.rowId,$index)"><i
										class="btn fa fa-trash ico-action-red"></i></a> --></td>
									<td class="text-center"><input type="checkbox"
										ng-model="designationModel.selected"
										style="margin-left: 18px;" /></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(function() {

		$('body').on('keydown', '#designation', function(e) {

			console.log(this.value);

			if (e.which === 32 && this.value === '') {
				alert("No spaces allowed at the beginning");
				return false;
			}

		});

	});
</script>

